<%- include('../partials/header'); -%>
  <!-- Page Header-->
  <header class="masthead" style="background: black;">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="post-heading">
                    <h1 style="word-wrap: break-word;"><%=(post.title)%></h1>
                    <h2 class="subheading" style="word-wrap: break-word;"><%=(post.subTitle)%></h2>
                    <span class="meta">
                            Posted by
                            <a href="#!"><%=(post.userName)%> <%=(post.userSurname)%></a>
                            on <%=(post.date)%>
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>
 <!-- Post Content-->
 <article class="mb-4" style="width: 100%; overflow: hidden;">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <h3>Content</h3>
                <p style="word-wrap: break-word;"><%=(post.content)%></p>
            </div>
        </div>
    </div>
</article>
<!-- Footer-->
    <%- include('../partials/footer'); -%>